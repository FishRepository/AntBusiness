<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.backend.admin.mapper.RoleMapper">

    <resultMap type="com.backend.admin.entity.Role" id="RoleMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="menuUrl" column="menu_url" jdbcType="VARCHAR"/>
        <result property="menuName" column="menu_name" jdbcType="VARCHAR"/>
    </resultMap>

    <resultMap type="com.backend.admin.entity.RoleUser" id="RoleUserMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="roleId" column="role_id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="RoleMap">
        select
          id, menu_url, menu_name
        from fqgj.role
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="RoleMap">
        select
          id, menu_url, menu_name
        from fqgj.role
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="RoleMap">
        select
          id, menu_url, menu_name
        from fqgj.role
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="menuUrl != null and menuUrl != ''">
                and menu_url = #{menuUrl}
            </if>
            <if test="menuName != null and menuName != ''">
                and menu_name = #{menuName}
            </if>
        </where>
    </select>

    <select id="getListByUserId" resultMap="RoleMap">
        select r.id, menu_url, menu_name from role r
        where r.id in
              (select ru.role_id from role_user ru where ru.user_id = #{id} and ru.state = 1)
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into fqgj.role(menu_url, menu_name)
        values (#{menuUrl}, #{menuName})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update fqgj.role
        <set>
            <if test="menuUrl != null and menuUrl != ''">
                menu_url = #{menuUrl},
            </if>
            <if test="menuName != null and menuName != ''">
                menu_name = #{menuName},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from fqgj.role where id = #{id}
    </delete>

</mapper>
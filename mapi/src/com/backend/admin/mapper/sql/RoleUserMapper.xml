<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.backend.admin.mapper.RoleUserMapper">

    <resultMap type="com.backend.admin.entity.RoleUser" id="RoleUserMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="roleId" column="role_id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="state" column="state" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="RoleUserMap">
        select
          id, role_id, user_id
        from fqgj.role_user
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="RoleUserMap">
        select
          id, role_id, user_id
        from fqgj.role_user
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="RoleUserMap">
        select
          id, role_id, user_id
        from fqgj.role_user
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="roleId != null">
                and role_id = #{roleId}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
        </where>
        ORDER BY role_id
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into fqgj.role_user(role_id, user_id)
        values (#{roleId}, #{userId})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update fqgj.role_user
        <set>
            <if test="roleId != null">
                role_id = #{roleId},
            </if>
            <if test="userId != null">
                user_id = #{userId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from fqgj.role_user where id = #{id}
    </delete>

    <insert id="addRoleUserBatch" parameterType="com.backend.admin.entity.RoleUser">
        insert into role_user (role_id, user_id, state)
        values
        <foreach collection="list" item="item" separator=",">
            (#{item.roleId}, #{item.userId}, #{item.state})
        </foreach>
    </insert>

    <update id="updateRoleUserBatch" parameterType="com.backend.admin.entity.RoleUser">
        UPDATE role_user t
        <foreach collection="list" item="item" open="set state = case id" close="END">
            WHEN #{item.id} THEN #{item.state}
        </foreach>
        WHERE id IN
        <foreach collection="list" item="item" separator="," open="(" close=")">
            #{item.id}
        </foreach>
    </update>
</mapper>
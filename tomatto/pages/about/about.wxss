.container {
  position: fixed;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center; /*垂直居中*/
  justify-content: center; /*水平居中*/
   background-color: #4b4b4b; 
  color: white;
}

.view-top {
  display: block;
  text-align: center;
  align-items: center;
  /* color: #c0c0c0; *//* background-color: #4b4b4b; */
}

.top-img {
  width: 165px;
  height: 62px;
  margin: 20px;
}

.top-text {
  display: flex;
  font-size: 12pt;
  font-weight: bold;
  /* color: #c0c0c0; */
  text-align: center;
  justify-content: center;
  /* line-height: 20px; *//* padding: 10px 0px; */
}

.view-body {
  padding: 20px 0px;
  /* margin-top: 20px; */
}

.view-body-text {
  font-size: 10pt;
  /* color: white; */
  display: flex;
  text-align: center;
  align-items: center;
  padding: 5px 20px;
  justify-content: center;
}

.middle-text{
  padding: 5px 70px;
}

.view-bottom {
  /* margin-top: 20px; *//* color: white; */
}

.view-bottom-title {
  font-size: 11pt;
  font-weight: bold;
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: center;
}

.view-bottom-text {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10px 20px;
  font-size: 10pt;
  text-indent: 2em;
  line-height: 150%;
}

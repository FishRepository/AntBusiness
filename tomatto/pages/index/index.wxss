/**index.wxss**/

.container {
  position: fixed;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center; /*垂直居中*/
  justify-content: center; /*水平居中*/
  background-color: #4b4b4b;
}

.view-top {
  display: block;
  text-align: center;
  align-items: center;
  color: #c0c0c0;
  padding: 5px 50px;
  /* position: fixed;
  top: 0;
  z-index: 10; */
  background-color: #4b4b4b;
}

.top-logo {
  width: 80px;
  height: 80px;
}

.top-text {
  display: flex;
  font-size: 11pt;
  line-height: 20px;
}

.view-bottom {
  display: flex;
  width: 100%;
  height: 100%;
   padding: 10px 0px; 
  /* margin-top: 100px; *//* padding: 20px 0px; */
}

.itro-title {
  display: flex;
}

.itro-title-text {
  width: 100%;
  font-size: 11pt;
  font-weight: bold;
  color: white;
  margin-left: 20px;
  border-left: 2px solid white;
  padding-left: 10px;
}

.itro-item {
  display: flex;
  text-align: center;
  justify-content: space-between;
  background-color: white;
  margin: 10px 30px;
  height: 40px;
  align-items: center;
  padding: 0px 10px;
  border-radius: 3px;
}

.itro-item-text {
  font-size: 10pt;
}

.itro-item-img {
  width: 25px;
  height: 25px;
}

/* pages/login/login.wxss */
page {
  height: 100%;
  background-color: #f2f2f2;
}

.v-logo {
  padding: 40rpx 0 60rpx 0;
  text-align: center;
}

.img-logo {
  width: 130rpx;
  height: 130rpx;
}

.input-login {
  font-size: 12pt;
  height: 100rpx;
  background-color: white;
}

.divider {
  height: 2rpx;
  background-color: #d8d6d6;
}

.nav-forget {
  padding-top: 20rpx;
  padding-right: 60rpx;
  color: #e44865;
  font-size: 10pt;
  text-align: right;
}

.v-operate {
  margin-top: 150rpx;
  text-align: center;
}

.btn {
  width: 80%;
  border-color: #e44865;
  background-color: transparent;
}

.btn-login {
  color: white;
  background-color: #e44865;
}

.btn-register {
  margin-top: 40rpx;
  color: #e44865;
}

.btn-register::after {
  border: 1px solid #e44865;
}
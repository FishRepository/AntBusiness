/* pages/login/login.wxss */

.container {
  position: fixed;
  height: 100%;
  width: 100%;
  /* display: flex; */
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: white;
}

page {
  height: 100%;
  background-color: #f2f2f2;
}

.v-logo {
  padding: 40rpx 0 60rpx 0;
  text-align: center;
}

.img-logo {
  width: 130rpx;
  height: 130rpx;
}

.v-input {
  display: flex;
  align-items: center;
  padding: 10px 30px 10px 10px;
  background-color: white;
  font-size: 12pt;
  border: 1px solid #d8d6d6;
  margin: 10px 40px 10px 40px;
}

.v-input input {
  display: inline-block;
  width: calc(100%);
}

.v-input image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

.divider {
  height: 2rpx;
  background-color: #d8d6d6;
}

.nav-forget {
  margin-top: 10px;
  margin-right: 40px;
  color: #e44865;
  font-size: 11pt;
  float: right;
  font-weight: bold;
}

.v-operate {
  margin-top: 80px;
  text-align: center;
}

.btn-login {
  font-size: 11pt;
  color: white;
  background-color: #e44865;
  margin: 60px 40px 20px;
  border-radius: 0px;
  border-color: #e44865;
  padding: 10px;
  text-align: center;
  /* background-color: transparent; */
}

.btn-register {
  /* border-radius: 0px; */
  font-size: 11pt;
  color: #e44865;
  margin-top: 30px;
  background-color: white;
  margin: 0px 40px;
  border-radius: 0px;
  border-color: #e44865;
  padding: 10px;
  text-align: center;
  border: 1px solid #e44865;
  /* background-color: transparent; */
}

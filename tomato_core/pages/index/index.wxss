/**index.wxss**/

.container {
  position: fixed;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.main-top {
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  z-index: 5;
  top: 0;
   background-color: #e64663; 
   /* background: linear-gradient(to right, #e14568, #f55c61);  */
  width: 100%;
  height: 40px;
}

.top-left {
  width: 50%;
  height: 100%;
  display: flex;
  text-align: left;
  padding-left: 15px;
}

.top-left-button {
  font-size: 10pt;
  display: flex;
  color: white;
  justify-content: center;
  text-align: center;
  align-items: center;
  border: 1px dashed white;
  padding: 0px 10px;
  margin: 8px 0px;
}

.top-right {
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: space-around;
  width: 50%;
  height: 100%;
}

.top-navigator {
  width: 50%;
  height: 100%;
  text-align: center;
  align-items: center;
  justify-content: center;
  display: flex;
}

.top-right-img {
  width: 35px;
  height: 35px;
}

.main-bottom {
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  z-index: 5;
  bottom: 0;
  background-color: #f0f0f0;
  width: 100%;
  height: 50px;
}

.bottom-left {
  width: 75%;
  height: 100%;
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: space-between;
}

.bottom-left-img {
  width: 50px;
  height: 50px;
  position: fixed;
  left: 10px;
  bottom: 10px;
}

.bottom-left-num {
  background-color: white;
  color: #e14568;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 9pt;
  width: 20px;
  height: 20px;
  z-index: 10;
  position: fixed;
  left: 45px;
  bottom: 40px;
  border-radius: 50%;
}

.bottom-left-view {
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: space-between;
  float: right;
  width: 100%;
  height: 100%;
  padding-left: 70px;
}

.opt-xuanzhe {
  color: #e64663;
  font-size: 10pt;
}

.opt-qingkong {
  width: 30%;
  height: 100%;
  font-size: 11pt;
  font-weight: bold;
  display: flex;
  color: #03a9f4;
  justify-content: center;
  text-align: center;
  align-items: center;
}

.bottom-right {
  display: flex;
  width: 25%;
  height: 100%;
  background-color: #e64663;
}

.bottom-right button {
  background-color: #e64663;
  font-size: 10pt;
  color: white;
  margin: 0px;
  padding: 0px;
  text-align: center;
  justify-content: center;
  align-items: center;
  display: flex;
  width: 100%;
  height: 100%;
}

.body-top {
  display: flex;
  height: 80px;
  width: 100%;
  margin-top: 40px;
   background-color: #e64663; 
    /* background: linear-gradient(to right, #e14568, #f55c61);  */
  color: white;
}

.body-top text {
  width: 100%;
  height: 100%;
  text-align: right;
  font-size: 25pt;
  /* font-weight: bold; */
  line-height: 200%;
  padding-right: 20px;
}

.body-table-title {
  display: flex;
  height: 50px;
  width: 100%;
  /* border-bottom: 1px solid #e6e6e6; */
}

.table-title-left {
  width: 25%;
  height: 100%;
  text-align: center;
  justify-content: center;
  align-items: center;
  display: flex;
}

.table-title-left text {
  font-size: 10pt;
  /* border-bottom: 2px solid #e64663; */
  display: flex;
  height: 100%;
  text-align: center;
  align-items: center;
}

.table-title-right {
  width: 75%;
  height: 100%;
  text-align: center;
  justify-content: space-between;
  align-items: center;
  display: flex;
  padding: 0px 10px;
}

.table-title-right text {
  font-size: 10pt;
  color: #e64663;
}

.body-table {
  display: flex;
  width: 100%;
  height: 100%;
  margin-bottom: 50px;
}

.table-left {
  height: 100%;
  width: 25%;
  float: left;
  font-size: 10pt;
  background-color: #f1f1f1;
}

.table-left-text {
  display: flex;
  height: 60px;
  text-align: center;
  align-items: center;
  justify-content: center;
  padding: 0px 10px;
   color: #515151; 
  border-bottom: 1px solid #e6e6e6;
}

.child-show {
  color: #f25862;
  background-color: white;
  border-left: 1px solid #e64663;
}

.table-right {
  width: 75%;
  height: 100%;
  float: right;
  font-size: 10pt;
}

.table-right-item {
  height: 60px;
  text-align: center;
  align-items: center;
  justify-content: center;
  margin: 0px 10px;
  border-bottom: 1px solid #f1f1f1;
}

.left-child-text {
  display: flex;
  width: 100%;
  height: 50%;
  text-align: center;
  align-items: center;
  font-size: 10pt;
  color: #2c2c2c;
}

.bottom-child-view {
  display: flex;
  height: 50%;
  width: 100%;
  text-align: center;
  align-items: center;
  justify-content: space-between;
}

.price-text {
  color: #8a8a8a;
}

.child-right-view {
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: center;
}

.opt-num-text {
  font-size: 10pt;
  padding: 10px;
  width: 25px;
}

.child-right-view image {
  width: 25px;
  height: 25px;
}

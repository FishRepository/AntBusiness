.view-add {
  width: 40px;
  height: 40px;
  position: fixed;
  z-index: 5;
  bottom: 5px;
  /* background-color: #f0f0f0; */
  border-radius: 50%;
  right: 5px;
}

.item-view {
  width: 100%;
  height: 50px;
  font-size: 10pt;
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #f0f0f0;
  overflow: hidden;
}

.item-title {
  display: flex;
  align-items: center;
  width: 100%;
  height: 100%;
  padding-left: 10px;
  /* line-height: 22px; */
  /* margin-right: 0; */
  -webkit-transition: all 0.5s;
  transition: all 0.5s;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  margin-left: -90px;
}

.item-opt {
  display: flex;
  height: 100%;
  width: 180px;
  text-align: center;
  align-items: center;
  justify-content: space-between;
  -webkit-transform: translateX(180px);
  transform: translateX(180px);
  -webkit-transition: all 0.5s;
  transition: all 0.5s;
}

.item-opt-edit {
  display: flex;
  height: 100%;
  width: 90px;
  text-align: center;
  align-items: center;
  justify-content: center;
  background-color: #cdcdcd;
  color: black;
  font-size: 10pt;
}

.item-opt-del {
  display: flex;
  height: 100%;
  width: 90px;
  text-align: center;
  align-items: center;
  justify-content: center;
  background-color: #e64663;
  color: white;
  font-size: 10pt;
}

.touch-move-active .item-title {
  -webkit-transform: translateX(0px);
  transform: translateX(0px);
}

.touch-move-active .item-opt {
  -webkit-transform: translateX(0px);
  transform: translateX(0px);
}

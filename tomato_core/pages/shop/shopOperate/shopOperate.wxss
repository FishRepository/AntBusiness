/* pages/shop/shopOperate/shopOperate.wxss */

.container {
  position: fixed;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.main-top {
  height: 240px;
  position: fixed;
  width: 100%;
  background-color: white;
  top: 0;
  z-index: 999;
}

.placeholder-input{
  color: #cdcdcd;
}

.main-scroll {
  margin-top: 240px;
  margin-bottom: 50px;
  height: 100%;
  display: flex;
}

.view-top {
  display: flex;
  justify-content: space-between;
  text-align: center;
  align-items: center;
  padding: 10px;
  border-bottom: 1px solid #e6e6e6;
  font-size: 11pt;
}

.view-top text {
  width: 40%;
}

.view-top input {
  border: 1px solid #e6e6e6;
  width: 100%;
  padding: 5px;
}

.view-title {
  width: 100%;
  height: 20px;
  display: flex;
  font-size: 10pt;
  padding: 5px;
  text-align: center;
  align-items: center;
  background-color: #e6e6e6;
}

.view-default {
  display: flex;
  justify-content: space-between;
  text-align: center;
  align-items: center;
  padding: 10px;
  /* border-bottom: 1px solid #e6e6e6; */
  font-size: 11pt;
}

.default-left {
  width: 40%;
}

.default-right {
  width: 100%;
  text-align: center;
  align-items: center;
  display: flex;
}

.view-user-define {
  display: flex;
  justify-content: space-between;
  text-align: center;
  align-items: center;
  padding: 10px;
  border-bottom: 1px solid #e6e6e6;
  font-size: 11pt;
}

.view-user-define-left {
  width: 50%;
  display: flex;
  align-items: center;
  text-align: center;
  justify-content: space-between;
}

.view-user-define-left image {
  width: 25px;
  height: 25px;
  /* background-color: black; */
}

.view-user-define input {
  border: 1px solid #e6e6e6;
  width: 100%;
  padding: 5px;
}

.view-add-define {
  display: flex;
  /* justify-content: space-between; */
  text-align: center;
  align-items: center;
  padding: 10px;
  /* border-bottom: 1px solid #e6e6e6; */
  font-size: 11pt;
}

.view-add-define image {
  width: 25px;
  height: 25px;
  /* background-color: black; */
}

.view-add-define text {
  margin-left: 10px;
  color: #03a9f4;
}

.view-button {
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: center;
  background-color: #e64663;
  border-radius: 0px;
  margin: 0px;
  padding: 0px;
  font-size: 11pt;
  color: white;
  width: 100%;
  height: 50px;
  position: fixed;
  z-index: 5;
  bottom: 0;
}

/* pages/shop/shop.wxss */

.container {
  position: fixed;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-bottom: 50px;
}

.main-scroll {
  width: 100%;
  height: 100%;
  background-color: #f3f3f3;
  display: flex;
  margin-bottom: 50px;
  /* padding-bottom: 120px; */
}

.item-scroll {
  height: 100px;
}

.item-view {
  height: 100px;
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: space-between;
  margin: 20px;
  background-color: white;
  /* box-shadow: 0 0 10px 2px #e5e5e5;   */
  box-shadow: 2px 2px 2px 0px #e5e5e5;
  /* border: 1px solid #FCE4EC; *//* border-bottom: 1px solid #f0f0f0; */
  overflow: hidden;
}

.item-title {
  height: 100%;
  width: 100%;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.5s;
  transition: all 0.5s;
}

.item-title-top {
  width: 100%;
  display: flex;
  height: 60%;
  text-align: center;
  align-items: center;
  justify-content: center;
  font-size: 20pt;
}

.item-title-bottom {
  width: 100%;
  display: flex;
  /* height: 50%; */
  text-align: center;
  align-items: center;
  justify-content: center;
  font-size: 10pt;
  color: #8a8a8a;
}

.item-opt {
  display: flex;
  height: 100%;
  width: 180px;
  text-align: center;
  align-items: center;
  justify-content: space-between;
  -webkit-transform: translateX(180px);
  transform: translateX(180px);
  -webkit-transition: all 0.5s;
  transition: all 0.5s;
}

.item-opt-edit {
  display: flex;
  height: 100%;
  width: 90px;
  text-align: center;
  align-items: center;
  justify-content: center;
  background-color: #cdcdcd;
  color: black;
  font-size: 10pt;
}

.item-opt-del {
  display: flex;
  height: 100%;
  width: 90px;
  text-align: center;
  align-items: center;
  justify-content: center;
  background-color: #e64663;
  color: white;
  font-size: 10pt;
}

.touch-move-active .item-title {
  -webkit-transform: translateX(-90px);
  transform: translateX(-90px);
}

.touch-move-active .item-opt {
  -webkit-transform: translateX(0px);
  transform: translateX(0px);
}

.view-add {
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 50px;
  position: fixed;
  z-index: 5;
  bottom: 0;
  background-color: #e64663;
  /* right: 5px; */
}

.view-add image {
  width: 25px;
  height: 25px;
  margin-right: 10px;
}

.view-add text {
  font-size: 10pt;
  color: white;
}

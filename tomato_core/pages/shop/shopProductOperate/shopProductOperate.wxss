/* pages/shop/shopProductOperate/shopProductOperate.wxss */

.container {
  height: 100%;
  width: 100%;
  font-size: 11pt;
}

.pro-name {
  height: 30px;
  align-items: center;
  display: flex;
  padding: 5px;
  border: 1px solid #e6e6e6;
  /* width: 100%; */
  margin: 10px;
}

.pro-parent-name {
  height: 30px;
  align-items: center;
  display: flex;
  padding: 0px 10px;
  color: #8a8a8a;
}

.pro-my-price {
  height: 50px;
  align-items: center;
  display: flex;
  justify-content: space-between;
  padding: 30px 10px 0px;
}

.pro-my-price-left {
  width: 80%;
}

.pro-my-price input {
  align-items: center;
  display: flex;
  padding: 5px;
  border: 1px solid #e6e6e6;
  margin: 10px;
  margin-right: 0px;
}

.pro-out-title {
  height: 30px;
  align-items: center;
  display: flex;
  padding: 0px 10px;
  /* color: #8a8a8a; */
  background-color: #e6e6e6;
}

.pro-out-item {
  height: 50px;
  align-items: center;
  display: flex;
  justify-content: space-between;
  padding: 5px 10px;
  border-bottom: 1px solid #e6e6e6;
}

.pro-out-item-left {
  width: 80%;
}

.pro-out-item input {
  align-items: center;
  display: flex;
  padding: 5px;
  border: 1px solid #e6e6e6;
  margin: 10px;
  margin-right: 0px;
}

.valduate {
  color: #f25862;
}

.view-button {
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: center;
  background-color: #e64663;
  border-radius: 0px;
  margin: 0px;
  padding: 0px;
  font-size: 11pt;
  color: white;
  width: 100%;
  height: 50px;
  position: fixed;
  z-index: 5;
  bottom: 0;
}

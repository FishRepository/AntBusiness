page {
  background-color: #f2f2f2;
}

.userinfo {
  padding: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #e64663;
}

.userinfo-avatar {
  width: 70px;
  height: 70px;
  border-radius: 50%;
  /* margin-bottom: 10rpx; */
}

.userinfo-nickname {
  color: white;
  /* margin-bottom: 20rpx; */
  padding: 10px;
  font-size: 10pt;
}

.divider {
  height: 2rpx;
  background-color: #d8d6d6;
}

.userinfo-contact {
  color: #4f494b;
  background-color: white;
}

.v-text {
  display: flex;
  align-items: center;
  text-align: center;
  /* justify-content: center; */
  padding: 10px 20px;
  background-color: white;
  border-bottom: 1px solid #d8d6d6;
  font-size: 11pt;
}

.text-right {
  position: absolute;
  right: 30rpx;
}

.bangding-text {
  padding: 5px 10px;
  border: 1px solid #d8d6d6;
  /* color:#d8d6d6; */
  border-radius: 5px;
}

.v-text image {
  width: 25px;
  height: 25px;
  margin-right: 5px;
}

.btn-logout {
  margin-top: 50px;
  background-color: white;
  color: #e14566;
  /* border-radius:0px; */
  padding: 10px;
  font-size: 11pt;
  text-align: center;
  font-weight: bold;
}

.download {
  position: fixed;
  bottom: 0;
  width: 100%;
  padding: 20rpx;
  display: flex;
  align-items: center;
  font-size: 11pt;
  background-color: white;
  /* text-align: center; */
  /* justify-content: space-between; */
}

.download-logo {
  width: 40px;
  height: 40px;
}

.download-info {
  margin-left: 20rpx;
  font-size: 10pt;
}

.download-emphasize {
  margin-bottom: 5px;
  display: block;
  font-weight: bold;
  font-size: 10pt;
}

.btn-download {
  background-color: white;
  font-size: inherit;
  box-sizing: content-box;
  color: #e44865;
}

.btn-download::after {
  border: 1px solid #e44865;
}

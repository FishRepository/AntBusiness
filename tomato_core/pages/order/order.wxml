<!--pages/order/order.wxml-->
<view class='container'>
  <view class='top-tab'>
    <view class="tab_item" bindtap='tabSwitchOut'>
      <text class="tab_item_text {{tabType==1 ? 'tab_on' : ''}}">出货订单</text>
    </view>
    <view class="tab_item" bindtap='tabSwitchIn'>
      <text class="tab_item_text {{tabType==2 ? 'tab_on' : ''}}">进货订单</text>
    </view>
  </view>

  <!-- 出货订单 -->
  <scroll-view scroll-y='true' wx:if="{{tabType==1}}" class='order-view' style='height:{{winH}}px' bindscrolltolower="searchScrollLower">
    <block wx:for="{{outOrders}}" wx:key="{{month}}" wx:for-index="p_index">
      <view class='order-date'>{{item.month}}</view>
      <block wx:for="{{item.orderlist}}" wx:key="{{order_id}}" wx:for-item="child" wx:for-index="c_index">
        <view class="order-detail {{child.isTouchMove?'touch-move-active':''}}" data-cindex="{{c_index}}" data-pindex="{{p_index}}" bindtouchstart="touchstart" bindtouchmove="touchmove" catchtap='gotoGetail'>
          <view class='detail-info'>
            <view class='detail-date'>{{child.order_time}}</view>
            <view class='detail-title'>{{child.brand_names}}</view>
            <view class='detail-price'>￥{{child.order_sales}}</view>
          </view>
          <view class='detail-opt'>
            <view class='detail-opt-del' catchtap='delOrder' data-cindex="{{c_index}}" data-pindex="{{p_index}}">删除</view>
          </view>
        </view>
      </block>
    </block>
  </scroll-view>

  <!-- 进货订单 -->
  <scroll-view scroll-y='true' wx:if="{{tabType==2}}" class='order-view' style='height:{{winH}}px' bindscrolltolower="searchScrollLower">
    <block wx:for="{{inOrders}}" wx:key="{{month}}" wx:for-index="p_index">
      <view class='order-date'>{{item.month}}</view>
      <block wx:for="{{item.orderlist}}" wx:key="{{order_id}}" wx:for-item="child" wx:for-index="c_index">
        <view class="order-detail {{child.isTouchMove?'touch-move-active':''}}" data-cIndex="{{c_index}}" data-pIndex="{{p_index}}" bindtouchstart="touchstart" bindtouchmove="touchmove" catchtap='gotoGetail'>
          <view class='detail-info'>
            <view class='detail-date'>{{child.order_time}}</view>
            <view class='detail-title'>{{child.brand_names}}</view>
            <view class='detail-price'>￥{{child.order_sales}}</view>
          </view>
          <view class='detail-opt'>
            <view class='detail-opt-del'>删除</view>
          </view>
        </view>
      </block>
    </block>
  </scroll-view>
</view>
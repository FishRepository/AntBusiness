<!--pages/order/orderDetail/orderDetail.wxml-->
<view class='container'>
  <!-- 顶部固定区域 -->
  <view class='order-top'>
    <view class='order-user-info'>
      <image class='user-head-image' src='{{orderDetail.userinfo.head}}'></image>
      <view class='user-main-info'>
        <view class='user-main-info-top'>
          <text>{{orderDetail.userinfo.name}}</text>
          <text>{{orderDetail.userinfo.phone}}</text>
        </view>
        <text class='user-main-info-bottom'>{{orderDetail.userinfo.address}}</text>
      </view>
      <image class='opt-goto' src='/images/order/icon_goto.png'></image>
    </view>
    <view class='order-user-memo'>
      <view class='order-user-memo-conent'>{{orderDetail.userinfo.memo}}</view>
      <view class='add-memo'>
        <image src='/images/order/icon_add.png'></image>
        <text>添加备注</text>
      </view>
    </view>
    <view class='order-date'>
      <view class='order-date-left'>下单时间：{{orderDetail.date}}</view>
      <image class='opt-goto' src='/images/order/icon_goto.png'></image>
    </view>
  </view>

  <!-- 中间滑动区域 -->
  <scroll-view scroll-y='true' class='order-main'>
    <view class='order-num'>
      <text class='num-left'>订单商品：</text>
      <text class='num-right'>{{orderDetail.totalNum}}件商品</text>
    </view>
    <view class='order-outprice'>
      <text class='outprice-left'>额外费用></text>
      <text class='outprice-right'>￥{{orderDetail.outPrice}}</text>
    </view>
    <view class='order-item'>
      <block wx:for="{{orderDetail.items}}" wx:key="{{brand}}">
        <view class='item-title'>{{item.brand}}-{{item.desp}}</view>
        <block wx:for="{{item.pro}}" wx:key="{{name}}" wx:for-item="child">
          <view class='item-detail'>
            <view>{{child.name}}</view>
            <view class='item-detail-bottom'>
              <text class='detail-bottom-price'>￥{{child.unitPrice}}</text>
              <text class='detail-bottom-num'>x{{child.num}}</text>
            </view>
          </view>
        </block>
      </block>
    </view>
  </scroll-view>

  <!-- 底部固定区域 -->
  <view class='order-total'>
    <view class='total-info'>
    <image src='/images/order/icon_total_price.png'></image>
    <text class='total-left'>合计：</text>
    <text class='total-right'>￥{{orderDetail.totalPrice}}</text>
    </view>
    <view class='total-opt'>
    <image src='/images/order/icon_download.png'></image>
    </view>
    
  </view>
</view>
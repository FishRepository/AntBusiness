<!--pages/order/orderDetail/orderDetail.wxml-->
<view class='container'>
  <view class='order-user-info'>
    <image class='user-head-image' src='{{orderDetail.userinfo.head}}'></image>
    <view class='user-main-info'>
      <view class='user-main-info-top'>
        <text>{{orderDetail.userinfo.name}}</text>
        <text>{{orderDetail.userinfo.phone}}</text>
      </view>
      <text class='user-main-info-bottom'>{{orderDetail.userinfo.address}}</text>
    </view>
    <image class='opt-goto' src='/images/order/icon_goto.png'></image>
  </view>
  <view class='order-user-memo'>
    <block wx:for="{{orderDetail.userinfo.memos}}" wx:key="{{memo}}">
      <view class='order-user-memo-conent'>{{item}}</view>
    </block>
    <view class='add-memo'>
      <image src='/images/order/icon_add.png'></image>
      <text>添加备注</text>
    </view>
  </view>
  <view class='order-main'>
    <view class='order-date'>
      <view class='order-date-left'>x下单时间：{{orderDetail.date}}</view>
      <image class='opt-goto' src='/images/order/icon_goto.png'></image>
    </view>
    <view class='order-num'>
      <text>订单商品</text>
      <text>{{orderDetail.totalNum}}件商品</text>
    </view>
    <view class='order-outprice'>
      <text>额外费用></text>
      <text>￥{{orderDetail.outPrice}}</text>
    </view>
    <view class='order-item'>
      <block wx:for="{{orderDetail.items}}" wx:key="{{brand}}">
        <view class='item-title'>{{item.brand}}-{{item.desp}}</view>
        <block wx:for="{{item.pro}}" wx:key="{{name}}" wx:for-item="{{child}}">
          <view class='item-detail'>
            <view>{{child.name}}</view>
            <view>
              <text>{{child.unitPrice}}</text>
              <text>{{child.num}}</text>
            </view>
          </view>
        </block>
      </block>
    </view>
  </view>
  <view class='order-total'>
    <image></image>
    <text>合计：{{orderDetail.totalPrice}}</text>
  </view>
</view>